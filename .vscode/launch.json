    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            "args": [ "run","./tests/debug.js"],
            // "args": [ "run","./tests/base.js"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "live",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            // "args": [ "live","https://devexpress.github.io/testcafe/example"],
            // "args": [ "live","http://t.268xue.com/front/showcoulist.json"],
            "args": [ "live","--timeout=666666666","https://baidu.com"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            "args": [ "server","--port=8777"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "apiLive",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            // "args": [ "live","https://devexpress.github.io/testcafe/example"],
            // "args": [ "live","http://t.268xue.com/front/showcoulist.json"],
            "args": [ "apiLive","--timeout=666666666","https://baidu.com"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "install",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            "args": [ "install","chromium"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}