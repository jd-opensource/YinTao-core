    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "run",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            "args": [ "run","./tests/debug.js"],
            // "args": [ "run","./tests/base.js"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "live",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            "args": [ "live","https://baidu.com"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "install",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "lib//index.js",
            "args": [ "install","firefox"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}