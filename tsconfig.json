{
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src", "lib/run/compiler/virtual-san-box.js", "index.d.ts",
    ],
    "compilerOptions": {
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "strict": true, 
        "module": "commonjs",
        "types": ["node"],
        "target": "ES2019",
        "lib": ["esnext", "dom", "DOM.Iterable"],
        "checkJs": false,
        "useUnknownInCatchVariables": false,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitAny":false,
        "allowJs": true,
        "jsx": "react",
        "outDir": "./",
        "resolveJsonModule": true,
        "inlineSourceMap": true,
        "noImplicitOverride": true,
        "inlineSources": true,
    },
    "compileOnSave": true,
    "exclude": [
        "tests",
        "@types",
        "lib/**/*",
        "dist",
    ],
}